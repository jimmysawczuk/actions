{
  "name": "@jimmysawczuk/actions",
  "version": "1.0.0",
  "author": "Jimmy Sawczuk <github@jimmysawczuk.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@actions/core": "^1.2.5",
    "@actions/github": "^4.0.0",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.24.0",
    "prettier": "^2.1.1"
  },
  "scripts": {
    "clean:telegram:workflow-notifier": "rm -rf telegram/workflow-notifier/dist",
    "build:telegram:workflow-notifier": "ncc build -o telegram/workflow-notifier/dist telegram/workflow-notifier/src/main.js",

    "clean:telegram:send-message": "rm -rf telegram/send-message/dist",
    "build:telegram:send-message": "ncc build -o telegram/send-message/dist telegram/send-message/src/main.js",

    "clean:github:get-tag-from-ref": "rm -rf github/get-tag-from-ref/dist",
    "build:github:get-tag-from-ref": "ncc build -o github/get-tag-from-ref/dist github/get-tag-from-ref/src/main.js",

    "clean:all": "yarn clean:telegram:workflow-notifier && yarn clean:telegram:send-message && yarn clean:github:get-tag-from-ref",
    "build:all": "yarn build:telegram:workflow-notifier && yarn build:telegram:send-message && yarn build:github:get-tag-from-ref",
    "prettier": "prettier -w '**/src/*.js' '**/*.yml' package.json"
  }
}
